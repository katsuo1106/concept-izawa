<h1>品番編集ページ</h1>
<%= form_with model: @wire,  local: true do |f| %>
  <div class="wire-box">
    <%= f.text_field :hinban, class:"hinban", placeholder:"品番名" %>
    <%= f.collection_select(:kei_id, Kei.all, :id, :name, {}, {class:"genre-select"}) %>
    <%= f.collection_select(:iro_id, Iro.all, :id, :name, {}, {class:"genre-select"}) %>
    <%= f.text_field :nagasa, class:"nagasa", placeholder:"L寸" %>
    <%= f.text_field :tanka, class:"tanka", placeholder:"単価" %>
    <%= f.submit "品番更新" ,class:"btn" %>
  </div>
<% end %>